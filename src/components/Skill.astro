---
import AnimatedBorder from './AnimatedBorder.astro';

const { name, image } = Astro.props;
---

<div class="group bg-background-light relative p-5 lg:p-10 text-center transition hover:scale-105 hover:rotate-2 hover:text-accent">
  <img src={image} alt={name} class="aspect-square object-contain w-3/4 mx-auto mb-6" />
  <h3 class="text-lg md:text-xl font-bold">{name}</h3>

  <AnimatedBorder />
</div>
