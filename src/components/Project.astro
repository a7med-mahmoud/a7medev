---
import Card from './Card.svelte';

const { name, description, images, link } = Astro.props;
---

<a href={link} target="_blank" rel="noopener">
  <Card>
    <picture>
      {images.map(image => (
        <source srcset={image.src} type={image.type} />
      ))}
      <img src={images[0].src} alt={name} />
    </picture>

    <div class="p-5 lg:p-10 bg-background-light dark:bg-background-darker">
      <h3 class="text-lg md:text-xl font-bold mb-3">{name}</h3>
      <p class="text-text-dark dark:text-text-light opacity-80">{description}</p>
    </div>
  </Card>
</a>
